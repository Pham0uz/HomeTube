<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="HomeTubeCommandSet_en-us">
    <AppName> Home Tube</AppName>
    <!--<CommandPrefix> Home Tube </CommandPrefix>-->
    <Example>Show me Justin Bieber Sorry</Example>
    
    <Command Name="listItems">      
      <Example>Show me Justin Bieber sorry</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Show [me] {searchQuery}</ListenFor>
      <Feedback>searching for {searchQuery}</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="selectedItem">
      <Example>Play video 1</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Play [video] [number] {selected} [video]</ListenFor>
      <Feedback>Playing video number {selected}</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>
    
    <Command Name="pauseVideo">
      <Example>Pause video</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Pause [the] [video]</ListenFor>
      <Feedback>Pausing video</Feedback>
      <Navigate Target="VideoPage.xaml"/>
    </Command>

    <Command Name="playVideo">
      <Example>Resume video</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Resume [the] [video]</ListenFor>
      <Feedback>Resuming video</Feedback>
      <Navigate Target="VideoPage.xaml"/>
    </Command>
    
    <Command Name="stopVideo">
      <Example>Stop video</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Resume [the] [video]</ListenFor>
      <Feedback>Stopping video</Feedback>
      <Navigate Target="VideoPage.xaml"/>
    </Command>

    <Command Name="volumeUp">
      <Example>Volume up by 5</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Volume up by {vNumber}</ListenFor>
      <Feedback>Turning volume up by {vNumber}</Feedback>
      <Navigate Target="VideoPage.xaml"/>
    </Command>

    <Command Name="volumeDown">
      <Example>Volume down by 5</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Volume down by {vNumber}</ListenFor>
      <Feedback>Turning volume down by {vNumber}</Feedback>
      <Navigate Target="VideoPage.xaml"/>
    </Command>

    <Command Name="skip">
      <Example>Skip 5 seconds</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Skip {number} seconds</ListenFor>
      <Feedback>Skipping {number} seconds</Feedback>
      <Navigate Target="VideoPage.xaml"/>
    </Command>

    <Command Name="goBack">
      <Example>Go back 5 seconds</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Go back {number} seconds</ListenFor>
      <Feedback>Going back {number} seconds</Feedback>
      <Navigate Target="VideoPage.xaml"/>
    </Command>
    
    <!-- PhraseList-->
    <PhraseList Label="searchQuery">
      <Item>Justin Bieber</Item>
      <Item>Despacito</Item>
      <Item>Selena Gomez</Item>
      <Item>Shake that</Item>
      <Item>David Lengauer</Item>
    </PhraseList>
    
    <PhraseList Label="selected">
      <Item>1</Item>
      <Item>2</Item>
      <Item>3</Item>
      <Item>4</Item>
      <Item>5</Item>
      <Item>first</Item>
      <Item>second</Item>
      <Item>third</Item>
      <Item>fourth</Item>
      <Item>fifth</Item>
    </PhraseList>

    <PhraseList Label="vNumber">
      <Item>5</Item>
      <Item>10</Item>
      <Item>20</Item>
      <Item>30</Item>
      <Item>45</Item>
    </PhraseList>

    <PhraseList Label="number">
      <Item>5</Item>
      <Item>10</Item>
      <Item>20</Item>
      <Item>30</Item>
      <Item>45</Item>
      <Item>60</Item>
      <Item>90</Item>
      <Item>120</Item>
      <Item>180</Item>
    </PhraseList>

  </CommandSet>
</VoiceCommands>