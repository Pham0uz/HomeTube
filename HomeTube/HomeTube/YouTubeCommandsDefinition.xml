<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="HomeTubeCommandSet_en-us">
    <AppName> Home Tube</AppName>
    <!--<CommandPrefix> Home Tube </CommandPrefix>-->
    <Example>Show me Justin Bieber Sorry</Example>
    
    <Command Name="listItems">      
      <Example>Show me Justin Bieber sorry</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Show [me] {searchQuery}</ListenFor>
      <Feedback>searching for {searchQuery}</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="selectedItem">
      <Example>Play video 1</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Play [video] [number] {selected} [video]</ListenFor>
      <Feedback>Play video number {selected}</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>
    
    <Command Name="pauseVideo">
      <Example>Pause video</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Pause [the] video</ListenFor>
      <Feedback>Pause video</Feedback>
      <Navigate Target="VideoPage.xaml"/>
    </Command>

    <Command Name="playVideo">
      <Example>Resume video</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Resume video</ListenFor>
      <Feedback>Resume video</Feedback>
      <Navigate Target="VideoPage.xaml"/>
    </Command>

    <Command Name="=volumeUp">
      <Example>Volume up 5</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Volume up {number}</ListenFor>
    </Command>
    
    <!-- PhraseList-->
    <PhraseList Label="searchQuery">
      <Item>Justin Bieber</Item>
      <Item>Selena Gomez</Item>
      <Item>Shake that</Item>
      <Item>David Lengauer</Item>
    </PhraseList>
    
    <PhraseList Label="selected">
      <Item>1</Item>
      <Item>2</Item>
      <Item>3</Item>
      <Item>4</Item>
      <Item>5</Item>
      <Item>first</Item>
      <Item>second</Item>
      <Item>third</Item>
      <Item>fourth</Item>
      <Item>fifth</Item>
    </PhraseList>

  </CommandSet>
</VoiceCommands>